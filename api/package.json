    "@types/redis-mock": "^0.17.0",
    "@types/sinon-express-mock": "^1.3.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "redis-mock": "^0.43.0",
    "sinon": "^7.2.7",
