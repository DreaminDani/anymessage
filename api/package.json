    "@types/helmet": "0.0.42",
    "@types/massive": "^5.4.1",
    "@types/redis": "^2.8.10",
    "@types/stripe": "^6.19.7",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^1.0.0",
