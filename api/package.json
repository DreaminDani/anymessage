  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --silent --coverage --ci",
    "test:logs": "jest --watch",
    "test:watch": "jest --watch --silent",
    "dev": "nodemon -e js,ts --legacy-watch src --ignore \"*.test.*\" --ignore dist/ --exec \"npm run build && npm run start-dev\"",
    "start": "node ./dist/server.js",
    "start-dev": "node --inspect=0.0.0.0:9223 ./dist/server.js",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "build:docs": "typedoc --out ../docs/api/typedoc --module system --tsconfig tdconfig.json",
    "docs": "swagger-jsdoc -d swaggerDef.js -o ../docs/api/swagger.json src/**/*.ts"
  },
  "author": "d3sandoval",
  "license": "ISC",
